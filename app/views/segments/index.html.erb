<p id="notice"><%= notice %></p>

<h3>Listing Segments</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Strava url</th>
      <th>Description</th>
      <th>Length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @segments.each do |segment| %>
      <tr>
        <td><%= segment.strava_url %></td>
        <td><%= segment.description %></td>
        <td><%= segment.length %></td>
        <td><%= link_to 'Show', segment %></td>
        <td><%= link_to 'Edit', edit_segment_path(segment) %></td>
        <td><%= link_to 'Destroy', segment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Segment', new_segment_path %>
