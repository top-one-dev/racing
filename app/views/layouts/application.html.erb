<!DOCTYPE html>
<html>
<head>
  <title>Gpsracing</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">GPS Racing</a>
      </div>
      <% #if session[:access_token] or session[:admin_user]%>
      <% if session[:admin_user]%>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= active_menu('/races') %>"><a href="/races">Races</a></a>
            <li class="<%= active_menu('/cyclists') %>"><a href="/cyclists">Cyclists</a></li>
            <li class="<%= active_menu('/results') %>"><a href="/results">Results</a></li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>

	<div class="container">
		<%= yield %>
	</div>

  <footer>
    <div class="container">
      GPS Racing 2015
    </div>
  </footer>
</body>
</html>
