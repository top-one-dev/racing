	<%= link_to (image_tag "ConnectWithStrava2x.png"), '/auth' %>
<% else %>
	<h1>
	Thanks for your linking your account
	<p><%= session[:cyclist_name] %></p>
	</h1>
	<p><%= link_to "Deauthorize", deauth_path %></p>	
<% end %>