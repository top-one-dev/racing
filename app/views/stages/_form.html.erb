<%= simple_form_for([@race, @stage]) do |f| %>
  <div class="form-inputs">
    <%= f.input :stage_no, label: 'Stage Number' %>
    <%= f.input :name %>
    <%= f.input :active_date %>
    <%= f.input :close_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
