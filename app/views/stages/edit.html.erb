<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @race.name %>
  <%= @race.id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @race.description %>
</p>

<p>
  <strong>Start Date:</strong>
  <%= @race.start_date %>
</p>

<p>
  <strong>End Date:</strong>
  <%= @race.end_date %>
</p>

<p>
  <strong>Hash tag:</strong>
  <%= @race.hashtag %>
</p>

<br/>

<p><strong>Listing stages</strong></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active date</th>
      <th>Close date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @race.stages.each do |stage| %>
      <tr>
        <td><%= stage.name %></td>
        <td><%= stage.description %></td>
        <td><%= stage.active_date %></td>
        <td><%= stage.close_date %></td>        
        <td><%= link_to 'Edit', edit_race_stage_path(@race, stage) %></td>
        <td><%= link_to 'Destroy', race_stage_path(@race, stage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<strong>Editing Stage<strong>
</p>

<%= render 'form' %>

<br/>
<%= link_to 'Back', race_path(@race) %>
