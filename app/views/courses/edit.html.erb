<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @race.name %>
  <%= @race.id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @race.description %>
</p>

<p>
  <strong>Start Date:</strong>
  <%= @race.start_date %>
</p>

<p>
  <strong>End Date:</strong>
  <%= @race.end_date %>
</p>

<p>
  <strong>Hash tag:</strong>
  <%= @race.hashtag %>
</p>

<br/>

<p><strong>Listing Courses</strong></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active date</th>
      <th>Close date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @race.courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.active_date %></td>
        <td><%= course.close_date %></td>        
        <td><%= link_to 'Edit', edit_race_course_path(@race, course) %></td>
        <td><%= link_to 'Destroy', race_course_path(@race, course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<strong>Editing Course<strong>
</p>

<%= render 'form' %>

<%= link_to 'Back', race_path(@race) %>
