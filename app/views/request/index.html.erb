<%= simple_form_for(:request, :method => :get) do |f| %>
  <div class="form-inputs">
    <%= f.input :request_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Send Request" %>
  </div>
<% end %>
<div style="padding: 10px; overflow-wrap: break-word;">
	<p style="border-radius: 8px; background: #F8F8F8;">
	<%= @result unless @result.nil? %>
	</p>
</div>