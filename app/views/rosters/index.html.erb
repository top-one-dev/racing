<p id="notice"><%= notice %></p>

<p><strong>Listing Rosters</strong></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Join date</th>
      <th>Race</th>
      <th>Cyclist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rosters.each do |roster| %>
      <tr>
        <td><%= roster.join_date %></td>
        <td><%= roster.race.name %></td>
        <td><%= roster.cyclist.name %></td>
        <td><%= link_to 'Destroy', roster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Roster', new_roster_path %>