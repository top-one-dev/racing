<%= simple_form_for(@race) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :hashtag %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
